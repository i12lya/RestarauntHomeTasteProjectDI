@model IEnumerable<RestarauntHomeTaste.Data.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Резервации</h1>

<p>
    <a class="btn btn-info"asp-action="Create">Резервирай маса</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Клиент
            </th>
            <th>
                Резервирана маса
            </th>
            <th>
                Дата за резервация
            </th>
            <th>
                Час за резервация
            </th>
            <th>
                Брой гости
            </th>
            <th>
                Направена на
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Clients.FirstName @item.Clients.LastName
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelItem => item.Tables.ImageUrl)" width="120" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateReservatoion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourReservation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
